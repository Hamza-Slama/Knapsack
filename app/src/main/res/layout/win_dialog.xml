<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"

   android:elevation="3dp"
    android:gravity="center"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ighands"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/hands" />

        <ImageView
            android:id="@+id/igbravo"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/bravs" />


    </LinearLayout>


    <Button

        android:id="@+id/btnRejouer"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/rejouer"
        android:text="Rejouer"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnQuitter"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Quitter"

        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/exit_"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />


</LinearLayout>